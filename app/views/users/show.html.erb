<% provide(:title, @user.name) %>
<div class="center jumbotron white-text">
  <%= gravatar_for @user %>
  <h1><%= @user.name %></h1>
  Member since <%= @user.created_at.strftime("%B %d, %Y") %><br>
  <%= @user.comments.count %> Comments, <%= @user.posts.count %> Posts
</div>

<div class="col-md-10 col-md-offset-1 white-text user-feed">
  <h2>User activity:</h2>
  <% if @feed.any? %>
    <ol>
      <%= user_activities @feed %>
    </ol>
    <%= will_paginate @feed %>
  <% else %>
    There seems to be nothing here :(
  <% end %>
</div>
